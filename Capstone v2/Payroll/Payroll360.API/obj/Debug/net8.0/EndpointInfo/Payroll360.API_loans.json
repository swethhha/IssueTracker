  "components": {
    "schemas": {
      "DocumentAttachmentDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "fileName": {
            "type": "string",
            "nullable": true
          },
          "filePath": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoanRequestDTO": {
        "required": [
          "amount",
          "loanType",
          "purpose",
          "tenureMonths"
        ],
        "type": "object",
        "properties": {
          "employeeId": {
            "type": "integer",
            "format": "int32"
          },
          "loanType": {
            "minLength": 1,
            "type": "string"
          },
          "amount": {
            "maximum": 1000000,
            "minimum": 1000,
            "type": "number",
            "format": "double"
          },
          "tenureMonths": {
            "maximum": 60,
            "minimum": 6,
            "type": "integer",
            "format": "int32"
          },
          "purpose": {
            "minLength": 5,
            "type": "string"
          },
          "acceptTerms": {
            "type": "boolean"
          },
          "documentPaths": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoanResponseDTO": {
