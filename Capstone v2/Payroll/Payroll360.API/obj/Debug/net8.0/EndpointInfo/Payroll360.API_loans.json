          "loanType": {
            "type": "string",
            "nullable": true
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "tenureMonths": {
            "type": "integer",
            "format": "int32"
          },
          "purpose": {
            "type": "string",
            "nullable": true
          },
          "appliedDate": {
            "type": "string",
            "format": "date-time"
          },
          "monthlyInstallment": {
            "type": "number",
            "format": "double"
          },
          "approvedDate": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "rejectedReason": {
            "type": "string",
            "nullable": true
          },
          "managerApproved": {
            "type": "boolean",
            "nullable": true
          },
          "financeApproved": {
            "type": "boolean",
            "nullable": true
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "documents": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DocumentAttachmentDTO"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
